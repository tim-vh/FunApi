@page
@model Fun.Api.Pages.ButtonSettingsModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Fun api button generator</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Fun api button generator</a>
    </nav>

    <div class="container">
        <form method="post" formaction="/ButtonGenerator" target="_blank">
            <div class="form-group">
                <label for="api-key">Api key</label>
                <input type="text" name="apikey" class="form-control" id="api-key" aria-describedby="Api key" placeholder="Api key">
            </div>
            <div class="row row-cols-4">
                @foreach (var mediaFileName in Model.MediaFileNames)
                {
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="mediafileNames" value="@mediaFileName" id="mediaFileName-@mediaFileName">
                            <label class="form-check-label" for="mediaFileName-@mediaFileName">
                                @mediaFileName
                            </label>
                        </div>
                    </div>
                }
            </div>
            <button formaction="/ButtonGenerator" class="btn btn-primary">Generate</button>
        </form>
    </div>
</body>
</html>
