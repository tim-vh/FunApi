{
  "NLog": {
    "extensions": [
      { "assembly": "NLog.Web.AspNetCore" }
    ],
    "targets": {
      "main": {
        "type": "File",
        "fileName": "main-${shortdate}.log",
        "layout": "${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:inner=${newline}${exception:format=tostring}}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Error",
        "writeTo": "main"
      }
    ]
  },
  "urls": "http://*:5000",
  "AllowedHosts": "*",
  "JWT": {
    "Key": "This is my supper secret key for jwt",
    "Issuer": "funapi",
    "Audience": "funapi"
  }
}