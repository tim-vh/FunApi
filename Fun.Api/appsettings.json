{
  "Logging": {
    "LogLevel": {
      "Default": "Trace"
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "internalLogLevel": "info",
    "internalLogFile": "${basedir}/internal-nlog.log",
    "extensions": [
      { "assembly": "NLog.Web.AspNetCore" }
    ],
    "targets": {
      "allFile": {
        "type": "File",
        "fileName": "${basedir}/nlog-all-${shortdate}.log"
      },
      "ownFile-web": {
        "type": "File",
        "fileName": "${basedir}/nlog-own-${shortdate}.log"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "allfile"
      },
      {
        "logger": "Microsoft.*",
        "maxLevel": "Info",
        "final": "true"
      },
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "ownFile-web"
      }
    ]
  },
  "urls": "http://*:5000",
  "AllowedHosts": "*",
}
